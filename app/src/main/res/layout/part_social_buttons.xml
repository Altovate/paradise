<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <io.c0nnector.github.paradise.ui.views.SocialButtonsView
        android:id="@+id/vSocialButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/btnLinkedin"
            style="@style/SocialButtonStyle"
            android:layout_marginRight="15dp"
            android:padding="3dp"
            android:src="@drawable/ic_social_linkedin"
            android:visibility="gone"
            tools:background="@color/grey_300"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/btnTwitter"
            style="@style/SocialButtonStyle"
            android:layout_marginRight="15dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/ic_social_twitter"
            android:visibility="gone"
            tools:background="@color/grey_300"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/btnFacebook"
            style="@style/SocialButtonStyle"
            android:padding="3dp"
            android:src="@drawable/ic_social_fb"
            android:visibility="gone"
            tools:background="@color/grey_300"
            tools:visibility="visible"/>

    </io.c0nnector.github.paradise.ui.views.SocialButtonsView>
</RelativeLayout>