<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ParadiseTheme" parent="ParadiseTheme.Base">

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>

        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>

    </style>

    <style name="ParadiseTheme.Fade" parent="ParadiseTheme">

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>

    </style>

    <style name="ParadiseTheme.Explode" parent="ParadiseTheme">

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>

    </style>


    <style name="ParadiseTheme.Transparent.Fade" parent="ParadiseTheme.Transparent.Base">

        <!--<item name="android:windowContentTransitions">true</item>-->

    </style>


    <!--Oveflow menu style-->
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">

        <!-- Required for Lollipop. -->
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>


</resources>